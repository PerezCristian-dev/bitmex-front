{
  "compilerOptions": {
    "target": "es5",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": false,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "baseUrl": "./src",
    "paths": {
      "@components": ["components"],
      "@components/*": ["components/*"],
      "@config": ["config"],
      "@config/*": ["config/*"],
      "@helpers": ["helpers"],
      "@helpers/*": ["helpers/*"],
      "@interfaces": ["interfaces"],
      "@interfaces/*": ["interfaces/*"],
      "@pages": ["pages"],
      "@pages/*": ["pages/*"],
      "@providers": ["provider"],
      "@providers/*": ["provider/*"],
      "@redux": ["redux"],
      "@redux/*": ["redux/*"],
      "@settings": ["settings"],
      "@settings/*": ["settings/*"],
      "@root": ["../"],
      "@root/*": ["../*"],
       "~/*": [
        "./*"
      ]
    }
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx"],
  "exclude": ["node_modules"]
}
